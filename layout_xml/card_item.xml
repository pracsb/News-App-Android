<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="110dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:id="@+id/Card_item_xml">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_relativeLayout"
        >
        <ImageView
            android:id="@+id/card_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="125dp">


        <TextView
            android:id="@+id/card_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="This is the title" />

<!--            <TextView-->
<!--                android:id="@+id/card_title"-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="125dp"-->
<!--                android:maxLines="3"-->
<!--                android:ellipsize="end"-->
<!--                android:text="This is the title"-->
<!--                android:layout_marginStart="125dp" />-->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bookmark_border_black_24dp"
            android:id="@+id/bookmarkBtn"
            android:tag="0"
            />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"
            android:id="@+id/card_linearLayout">

        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41s ago "
            android:textSize="10sp"/>

            <TextView
                android:id="@+id/card_seperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="10sp"/>

           <TextView
               android:id="@+id/card_section"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="3dp"
               android:text="Environment"
               android:textSize="10sp"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>